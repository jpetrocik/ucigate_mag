<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".SessionHistoryActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp" >
    
    <TextView
        android:id="@+id/sessionDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="1dp"
        android:layout_weight="1.8"
        android:background="@color/darkGrey"
        android:text="Session"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/sessionGates"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="1dp"
        android:layout_weight=".5"
        android:background="@color/darkGrey"
        android:gravity="right"
        android:text="#"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/sessionDst"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="1dp"
        android:layout_weight=".7"
        android:background="@color/darkGrey"
        android:gravity="right"
        android:text="Dst"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/sessionBest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="1dp"
        android:layout_weight="1"
        android:gravity="right"
        android:text="Best"
        android:background="@color/darkGrey"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/sessionAvg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="1dp"
        android:layout_weight="1"
        android:gravity="right"
        android:text="Avg"
        android:background="@color/darkGrey"
        android:textColor="@color/white"
        android:textSize="20sp" />

</LinearLayout>
    
    <ListView
        android:id="@+id/summaryDetailHistoryListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

</LinearLayout>